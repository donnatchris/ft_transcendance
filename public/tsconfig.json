{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["*.ts","./**/*.ts"],
  "ts-node": {
    "esm": true,
    "swc": false
  },
  "exclude": [
    "tailwind.config.ts"
  ]
}
